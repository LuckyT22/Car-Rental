@page "/"
@using Car_Rental.Buisness.Classes
@using Car_Rental.Common.Interfaces
@using Car_Rental.Common.Enums
@inject BookingProcessor bp

<PageTitle>Car Rental</PageTitle>

<h1>Car Rental Assignment</h1>

<div class="row">

<h6>Vehicles</h6>

    <table class="table border border-secondary table table-borderless">
        <thead>
            <tr class="flex-wrap">
                <th>RegNo</th>
                <th>Make</th>
                <th>Odometer</th>
                <th>Cost Km</th>
                <th>Vehicle Type</th>
                <th>$ Day</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var Car in bp.GetVehicles())
            {
            <tr class="flex-wrap">
                <th>@Car.regNum</th>
                <td>@Car.make</td>
                <td>@Car.odometer</td>
                <td>@Car.costKM</td>
                <td>@Car.vehicleTypes</td>
                <td>@Car.vehicleTypesInt</td>
                <td>
                        <label class=@(Car.status == VechicleStatuses.Booked ? "btn btn-danger rounded-pill btn-sm" : "btn btn-dark btn-sm rounded-pill")>@Car.status</label>
                </td>
            </tr>
            }
                
    </tbody>
</table>
</div>
<br />
<div class="row">

<h6>Bookings</h6>

    <table class="table border border-secondary table table-hover table table-borderless">
        <thead>
            <tr class="flex-wrap">
                <th>RegNo</th>
                <th>Customer</th>
                <th>Km Rented</th>
                <th>Km Returned</th>
                <th>Rented</th>
                <th>Returned</th>
                <th>Cost</th>
                <th>Status</th>
            </tr>
        </thead>
    <tbody>
        @foreach (var Booking in bp.GetBookings())
            {
            <tr class="flex-wrap">
                <th>@Booking.RegNum</th>
                <td>@Booking.Customer</td>
                <td>@Booking.KmRented</td>
                <td>@Booking.KmReturned</td>
                <td>@Booking.RentedDate</td>
                <td>@Booking.ReturnDate</td>
                <td>@Booking.VehicleTypesDailyCost</td>
                <td>
                        @* <label class="btn btn-danger" for="option2">@Booking.status</label> *@
                        <label class=@(Booking.status == VechicleStatuses.Open ? "btn btn-danger rounded-pill btn-sm" : "btn btn-success rounded-pill btn-sm")>@Booking.status</label>
                </td>
            </tr>
            }
    </tbody>
</table>
</div>
<br />
<div class="row">

<h6>Customers</h6>

    <table class="table border border-secondary table table-hover table table-borderless">
    <thead>
        <tr>
            <th>SSN</th>
            <th>Last Name</th>
            <th>First Name</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var Customer in bp.GetCustomers())
            {
                <tr>
                    <th>@Customer.SSN</th>
                    <td>@Customer.LastName</td>
                    <td>@Customer.FirstName</td>
                </tr>
                
            }
    </tbody>
</table>
</div>


